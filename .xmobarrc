Config { font         = "-*-terminus-*-*-*-*-12-*-*-*-*-*-*-u"  
             , bgColor      = "#000000"
             , fgColor      = "#BBBBBB"
	     , position =  Top
             , lowerOnStart = False
             , commands     = [ Run Network "wlp2s0" ["-L","0","-H","32","-l", "green", "--normal","orange","--high","red"] 40
                              , Run Cpu ["<cpu0>/<cpu1>","-L","3","-H","50","-l","green","--normal","orange","--high","red"]   40
                              , Run Cpu ["<cpu0>","-L","3","-H","50","-l","green","--normal","orange","--high","red"]  40
                              , Run Memory ["-t","Mem: <usedratio>%", "-l", "green", "--normal","orange","--high","red"] 40
			      , Run Date "%a %b %_d %H:%M" "date" 60
                              , Run CpuFreq ["-t","Freq: <cpu0> | <cpu1> GHz","-L","0","-H","2","-l","green","-n","orange","-h","red"] 50
                              , Run StdinReader
                              ]
             , sepChar      = "%"
             , alignSep     = "}{"
	     , template = " %StdinReader% }{ %cpu% @ %cpufreq% <fc=#0033FF>|</fc>  %memory% <fc=#0033FF>|</fc> %wlp2s0% <fc=#0033FF>|</fc> %date%"
             }
