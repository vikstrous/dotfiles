# turn off autolock temporarily
mode "nosleep" {
        # back to normal: Enter or Escape
        bindsym Return mode "default"; exec xautolock -enable
        bindsym Escape mode "default"; exec xautolock -enable
}

bindsym $mod+Escape mode "nosleep"; exec xautolock -disable


workspace_auto_back_and_forth yes
