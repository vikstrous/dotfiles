URxvt*foreground: white
!urxvt*background: black
!URxvt*.transparent: true
URxvt*.shading: 20
URxvt.scrollBar: false
!URxvt.scrollstyle: plain
!URxvt.perl-ext-common: font-size
!URxvt.perl-ext-common: clipboard,font-size
URxvt.perl-ext-common: default,clipboard,font-size,url-select,keyboard-select,matcher
!,selection-to-clipboard
!Rxvt.perl-ext-common: clipboard,font-size,selection-to-clipboard
URxvt.depth: 32
URxvt.background: rgba:1111/1111/1111/dddd

!=
URxvt.keysym.C-0x3d: perl:font-size:increase
!-
URxvt.keysym.C-0x2d: perl:font-size:decrease
! +
!URxvt.keysym.C-0x2b: perl:font-size:incglobal
! _
!URxvt.keysym.C-0x5f: perl:font-size:decglobal
! 0
URxvt.keysym.C-0x30: perl:font-size:reset
!resize faster
URxvt.font-size.step: 4

!big buffer
URxvt.saveLines: 20000

!URxvt.keysym.M-s: searchable-scrollback:start

! remove the stupid ctrl+shift behaviour
URxvt.iso14755: False

URxvt.clipboard.copycmd:  xsel -ib
URxvt.clipboard.pastecmd: xsel -ob

URxvt.url-select.launcher:  firefox
URxvt.url-select.underline: true
! TODO why doesnt this work?
URxvt.url-select.button: 2
! TODO picker a better hotkey
URxvt.keysym.M-u: perl:url-select:select_next

URxvt.keysym.M-Escape:      perl:keyboard-select:activate
URxvt.keysym.M-s: perl:keyboard-select:search
!URxvt.keysym.M-Escape:      perl:keyboard-select:activate
!URxvt.keysym.M-s:           perl:keyboard-select:search

! the usual ctrl+shift+c/v
URxvt.keysym.C-C:   perl:clipboard:copy
URxvt.keysym.C-V:   perl:clipboard:paste

! I dont know what this does
!URxvt.iso14755_52: false

URxvt.url-launcher: /usr/bin/firefox
URxvt.matcher.button: 2

!*color0:  #2E3436
!*color1:  #a40000
!*color2:  #4E9A06
!*color3:  #C4A000
!*color4:  #3465A4
!*color5:  #75507B
!*color6:  #ce5c00
!*color7:  #babdb9
!*color8:  #555753
!*color9:  #EF2929
!*color10: #8AE234
!*color11: #FCE94F
!*color12: #729FCF
!*color13: #AD7FA8
!*color14: #fcaf3e
!*color15: #EEEEEC

! Fonts
URxvt.allow_bold:           true
!URxvt.font:                 -*-terminus-medium-r-normal-*-12-120-72-72-c-60-iso8859-1
! URxvt*font: xft:Anonymous Pro:pixelsize=14:antialiasing=true:hinting=true
!URxvt*font:       xft:Anonymous Pro:pixelsize=14:antialiasing=true
!URxvt*font:       xft:DejaVu Sans Mono:pixelsize=14:antialiasing=true
URxvt*font: xft:Input Mono:style=Regular:pixelsize=24,xft
!URxvt*font: xft:Anonymous:style=Regular:pixelsize=18:antialiasing=true
!,xft:Inconsolata\ for\ Powerline:pixelsize=12
!URxvt*font: xft:Anonymous Pro:pixelsize=18:antialiasing=true:hinting=true

! Fix font space
!URxvt*letterSpace: 0

rofi.color-enabled: true

! State:           'bg',     'fg',     'bgalt',  'hlbg',   'hlfg'
rofi.color-normal: #000000,  #CCCCCC,  #000000,  #111111,  #439543
rofi.color-urgent: #000000,  #BA5353,  #000000,  #111111,  #439543
rofi.color-active: #000000,  #426793,  #000000,  #111111,  #439543

!             'background','border'
rofi.color-window: #000000,#000000

rofi.bw:0
rofi.font:Input mono 24
rofi.opacity:85
rofi.lines:20
rofi.width:40
rofi.padding:5
rofi.terminal:urxvt

! this forces a search by prefix
rofi.levenshtein-sort:false

!old colors:
!rofi -show run -terminal urxvt -hlfg "#439543" -hlbg "#111111" -bg "#000000" -fg "#CCCCCC" -hlbg-active "#111111" -hlfg-active "#439543" -fg-active "#426793" -fg-urgent "#BA5353" -bc '#000000' -bw 0 -font "Input mono 12" -opacity 85 -lines 20 -width 40 -padding 5 -columns 2 -autoselect

! xrdb ~/.Xdefaults to reload
!
Xft.dpi: 192
!Xft.dpi: 180
Xft.autohint: 0
Xft.lcdfilter:  lcddefault
Xft.hintstyle:  hintfull
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb
